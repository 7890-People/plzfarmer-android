<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape_rect_r32_bordered"
        android:layout_margin="20dp"
        android:padding="16dp">


        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/common_shape_rect_r32_filled"
            android:backgroundTint="@color/gray2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/diseaseNameKrTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@id/diseaseNameEngTextView"
            android:text="탄저병"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView" />

        <TextView
            android:id="@+id/diseaseNameEngTextView"
            android:layout_width="0dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:text="TanJeorByeong"
            app:layout_constraintStart_toStartOf="@id/diseaseNameKrTextView"
            app:layout_constraintTop_toBottomOf="@id/diseaseNameKrTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>