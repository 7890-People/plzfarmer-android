<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape_rect_r32_bordered"
        android:layout_margin="8dp"
        android:padding="16dp">


        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/common_shape_rect_r32_filled"
            android:backgroundTint="@color/gray2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/diseaseNameKrTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/diseaseNameEngTextView"
            android:text="탄저병"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView" />

        <TextView
            android:id="@+id/diseaseNameEngTextView"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:text="TanJeorByeong"
            app:layout_constraintStart_toStartOf="@id/diseaseNameKrTextView"
            app:layout_constraintTop_toBottomOf="@id/diseaseNameKrTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포도"
            android:fontFamily="@font/gangwong_edu_all_bold"
            android:textColor="@color/brown"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_shape_rect_r32_bordered"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/diseaseNameEngTextView"
            app:layout_constraintStart_toStartOf="@id/diseaseNameKrTextView"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_btn_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            android:background="@color/transparent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>