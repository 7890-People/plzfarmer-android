<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/common_shape_rect_r20_filled"
    android:backgroundTint="@color/white"
    android:padding="40dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="어떤 식물을 진단하시겠어요?"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_podo"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/diagnosis_selector_btn_podo"
        app:layout_constraintEnd_toStartOf="@id/btn_oe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/text_podo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="포도"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/btn_podo"
        app:layout_constraintStart_toStartOf="@id/btn_podo"
        app:layout_constraintTop_toBottomOf="@id/btn_podo" />

    <ImageButton
        android:id="@+id/btn_oe"
        android:layout_width="50dp"
        android:layout_height="72dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/diagnosis_selector_btn_oe"
        app:layout_constraintBottom_toBottomOf="@id/btn_podo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_podo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="오이"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_podo"
        app:layout_constraintEnd_toEndOf="@id/btn_oe"
        app:layout_constraintStart_toStartOf="@id/btn_oe" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/common_selector_btn"
        android:text="진단하기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_podo" />


</androidx.constraintlayout.widget.ConstraintLayout>